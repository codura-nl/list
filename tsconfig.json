{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "removeComments": false,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*"
  ]
}
